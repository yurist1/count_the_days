<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="156dp"
    android:background="@drawable/shape_curve"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_dialog_ok_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="24dp"
            android:paddingBottom="22dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textSize="14dp"
            android:textColor="#ff000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_dialog_ok_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="22dp"
            android:textSize="14dp"
            android:textColor="#ff666666"
            android:clickable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:background="@drawable/selector_btn_one_ok">
        <TextView
            android:id="@+id/txt_btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="Delete" />
    </RelativeLayout>
</LinearLayout>